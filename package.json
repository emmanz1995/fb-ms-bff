{
  "name": "fb-ms-orchestration",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "start:test-server": "cross-env NODE_ENV=test dotenv -e .env.test tsx src/index.ts",
    "dist": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "format": "prettier --write '{src,tests}/**/*.ts'",
    "studio:dev": "cross-env NODE_ENV=development dotenv -e .env npx drizzle-kit studio"
  },
  "author": "Emmanuel Okuchukwu (emmanz95.netlify.app)",
  "license": "ISC",
  "description": "Finbotics Backend For Frontend Orchestration Service",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "jest": {
    "coverageDirectory": "coverage/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "dist/",
      "coverage/",
      "tests/",
      "src/index.js",
      "src/app.js",
      "src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "statemetns": 90,
        "functions": 95
      }
    },
    "testPathIgnorePatterns": [
      "node_modules/(?!uuid)",
      "/dist/",
      "/tests/"
    ],
    "roots": [
      "<rootDir>/"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.+(ts|js)",
      "**/?(*.)+(spec|test).+(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  }
}
